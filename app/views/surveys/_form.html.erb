  <div class='row'>
    <div class='col-xs-12'>
      <%= form_for(@survey, :html=> {class: "form-horizontal", role: "form"}) do |f| %>
        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :title %>
          </div>
          <div class="col-sm-8">
            <%= f.text_field :title, class: "form-control" , placeholder: "Enter title" , autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="control-label col-sm-4">
            <%= f.label :description %>
          </div>
          <div class="control-label col-sm-16">
            <%= f.text_area :description, class: "form-control", placeholder: "Enter a short description about the survey" , autofocus: true %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit class: 'btn btn-primary btn-lg' %>
          </div>
        </div>
        <% end %>
    </div>
  </div>